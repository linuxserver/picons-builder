FROM alpine:3.4
MAINTAINER sparklyballs

# install packages
RUN \
 apk add --no-cache \
	bash \
	bzip2 \
	coreutils \
	git \
	gzip \
	imagemagick \
	librsvg \
	tar \
	util-linux && \

 apk add --no-cache \
	--repository http://nl.alpinelinux.org/alpine/edge/testing \
	pngquant

# copy build script
COPY root/ /

# build picons
RUN \
 mkdir -p /picons && \
 /bin/bash /build-picons.sh

CMD ["cp", "-avr", "/picons", "/mnt/"]
